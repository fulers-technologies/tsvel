{
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "quoteProps": "as-needed",
  "jsxSingleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "avoid",
  "requirePragma": false,
  "insertPragma": false,
  "proseWrap": "preserve",
  "htmlWhitespaceSensitivity": "css",
  "vueIndentScriptAndStyle": false,
  "endOfLine": "lf",
  "embeddedLanguageFormatting": "auto",
  "singleAttributePerLine": false,
  "plugins": ["prettier-plugin-organize-imports", "prettier-plugin-packagejson", "prettier-plugin-go-template"],
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "printWidth": 120,
        "tabWidth": 2,
        "parser": "json"
      }
    },
    {
      "files": ["*.yml", "*.yaml"],
      "options": {
        "printWidth": 120,
        "tabWidth": 2,
        "singleQuote": false,
        "parser": "yaml"
      }
    },
    {
      "files": "*.html",
      "options": {
        "printWidth": 120,
        "tabWidth": 2,
        "htmlWhitespaceSensitivity": "ignore",
        "parser": "html"
      }
    },
    {
      "files": ["*.jsx", "*.tsx"],
      "options": {
        "printWidth": 100,
        "tabWidth": 2,
        "jsxSingleQuote": true,
        "jsxBracketSameLine": false,
        "parser": "typescript"
      }
    },
    {
      "files": ["*.js", "*.ts"],
      "options": {
        "printWidth": 100,
        "tabWidth": 2,
        "singleQuote": true,
        "parser": "typescript"
      }
    },
    {
      "files": ["*.css", "*.scss", "*.sass", "*.less"],
      "options": {
        "printWidth": 120,
        "tabWidth": 2,
        "singleQuote": false,
        "parser": "css"
      }
    },
    {
      "files": ["*.md", "*.mdx"],
      "options": {
        "printWidth": 80,
        "tabWidth": 2,
        "proseWrap": "always",
        "parser": "markdown"
      }
    },
    {
      "files": "*.xml",
      "options": {
        "printWidth": 120,
        "tabWidth": 2,
        "xmlWhitespaceSensitivity": "ignore",
        "parser": "html"
      }
    },
    {
      "files": "*.vue",
      "options": {
        "printWidth": 100,
        "tabWidth": 2,
        "singleQuote": true,
        "vueIndentScriptAndStyle": true,
        "parser": "vue"
      }
    },
    {
      "files": "*.svelte",
      "options": {
        "printWidth": 100,
        "tabWidth": 2,
        "singleQuote": true,
        "parser": "svelte"
      }
    },
    {
      "files": "*.go",
      "options": {
        "printWidth": 120,
        "tabWidth": 4,
        "useTabs": true,
        "parser": "go"
      }
    },
    {
      "files": "*.toml",
      "options": {
        "printWidth": 120,
        "tabWidth": 2,
        "parser": "toml"
      }
    },
    {
      "files": "*.ini",
      "options": {
        "printWidth": 120,
        "tabWidth": 2
      }
    },
    {
      "files": "*.properties",
      "options": {
        "printWidth": 120,
        "tabWidth": 2
      }
    },
    {
      "files": "package.json",
      "options": {
        "printWidth": 120,
        "tabWidth": 2,
        "parser": "json-stringify"
      }
    },
    {
      "files": "*.lock",
      "options": {
        "printWidth": 120,
        "tabWidth": 2
      }
    }
  ]
}

